{
  "version": 1,
  "hooks": {
    "sessionStart": [{ "command": "node .cursor/spinal_cord.js", "timeout": 5 }],
    "beforeSubmitPrompt": [{ "command": "node .cursor/spinal_cord.js", "timeout": 5 }],
    "preCompact": [{ "command": "node .cursor/spinal_cord.js", "timeout": 5 }],

    "beforeReadFile": [{ "command": "node .cursor/spinal_cord.js", "timeout": 5 }],
    "beforeTabFileRead": [{ "command": "node .cursor/spinal_cord.js", "timeout": 5 }],

    "preToolUse": [
      { "command": "node .cursor/spinal_cord.js", "matcher": "Write", "timeout": 5 }
    ],
    "afterFileEdit": [{ "command": "node .cursor/spinal_cord.js", "timeout": 5 }],

    "beforeShellExecution": [{ "command": "node .cursor/spinal_cord.js", "timeout": 5 }],
    "beforeMCPExecution": [{ "command": "node .cursor/spinal_cord.js", "timeout": 5 }]
  }
}

